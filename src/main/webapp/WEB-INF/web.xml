<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>PersonList</servlet-name>
        <servlet-class>com.uniyaz.javaee.FindAllPersonServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PersonList</servlet-name>
        <url-pattern>/FindAllPerson</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SavePerson</servlet-name>
        <servlet-class>com.uniyaz.javaee.SavePersonServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SavePerson</servlet-name>
        <url-pattern>/SavePerson</url-pattern>
    </servlet-mapping>
    
</web-app>
